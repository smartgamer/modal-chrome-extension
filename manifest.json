{
    "manifest_version": 2,
    "name": "Modal Menu Extension",
    "description": "A quick extension exercise to create a modal instead of a popup",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icon32.png"
    },
    "content_scripts": [
        {
            "css": ["styles.css"],
            "matches": ["<all_urls>"],
            "js": ["UI.js", "content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab"
      ]
}